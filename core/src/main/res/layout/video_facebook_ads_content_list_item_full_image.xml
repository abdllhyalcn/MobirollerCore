<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/youtube_type_five_height"
    android:padding="6.6dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/main_layout"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/youtube_type_ads_full_height"
                      android:background="@color/white"
                      android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rss_full_image_item_height"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/youtube_type_ads_main_full_header_height"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center|top"
                    android:maxLines="1"
                    android:paddingStart="9.3dp"
                    android:paddingEnd="9.3dp"
                    android:paddingTop="5.3dp"
                    android:textColor="#000000"
                    android:textSize="11.3sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvHeader"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="#a9a9a9"
                    android:textSize="9.3sp"/>

                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/youtube_type_ads_main_full_button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="#CCC"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>
            </RelativeLayout>


        </LinearLayout>

    <LinearLayout
        android:id="@+id/ad_choices_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/empty_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#e5e3e5"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:background="@drawable/ad_placeholder_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:padding="1dp"
                android:text="@string/ad"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>