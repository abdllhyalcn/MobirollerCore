<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="189.3dp"
    android:padding="1.35dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189.3dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:src="@drawable/no_image"
            android:layout_height="189.3dp"
            android:transitionName="galleryImage"
            android:scaleType="center"/>


        <RelativeLayout
            android:id="@+id/gallery_gradient"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/rss_image_gradient"
            android:paddingBottom="10.7dp"
            android:paddingStart="12.7dp"
            android:paddingEnd="12.7dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/gallery_caption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#ffffff"
                android:textSize="?attr/font_133"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
