<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/rss_header_height"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/rss_list_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rss_header_item_height"
        android:scaleType="centerCrop"
        android:transitionName="rssImage"
        android:src="@drawable/no_image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rss_header_item_text_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingTop="7.3dp"
        android:paddingBottom="7.3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/rss_list_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="?attr/font_133"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:typeface="sans"/>

    </RelativeLayout>

</RelativeLayout>